        <IsA>app:gui</IsA>
        <Summary>Javascript Bindings for Cinnamon</Summary>
        <Description>Cjs allows using Cinnamon libraries from Javascript. It's based on the Spidermonkey Javascript engine from Mozilla and the GObject introspection framework.</Description>
        <Archive sha1sum="db79c447793aa2a8573966beef932e029f5663fc" type="targz">https://github.com/linuxmint/cjs/archive/2.8.0.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>gnome-common</Dependency>
            <Dependency>gobject-introspection-devel</Dependency>
            <Dependency>mozjs24-devel</Dependency>
            <Dependency>cairo-devel</Dependency>
            <Dependency>readline-devel</Dependency>
            <Dependency>gtk3-devel</Dependency>
            <Dependency>dbus-glib-devel</Dependency>
            <Dependency>glib2-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>cjs-internals</Name>
        <RuntimeDependencies>
	    <Dependency>cairo</Dependency>
	    <Dependency>glib2</Dependency>
            <Dependency>libffi</Dependency>
	    <Dependency>libgcc</Dependency>
            <Dependency>mozjs24</Dependency>
            <Dependency>readline</Dependency>
            <Dependency>gobject-introspection</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/cjs</Path>
            <Path fileType="library">/usr/lib/libcjs.so.*</Path>
	    <Path fileType="library">/usr/lib/cjs/installed-tests/js</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/installed-tests/cjs</Path>
            <Path fileType="executable">/usr/bin/</Path>
            <Path fileType="library">/usr/lib/cjs/girepository-1.0</Path>
        </Files>
    </Package>

    <Package>
        <Name>cjs-internals-devel</Name>
        <Summary>cjs-internals için geliştirme dosyaları</Summary>
        <RuntimeDependencies>
            <Dependency release="current">cjs-internals</Dependency>
            <Dependency>mozjs24-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include/</Path>
            <Path fileType="library">/usr/lib/pkgconfig</Path>
            <Path fileType="library">/usr/lib/libcjs.so</Path>
        </Files>
    </Package>

