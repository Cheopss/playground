            <Dependency>gobject-introspection-devel</Dependency>
            <Dependency>dbus-devel</Dependency>
            <Dependency>gtk-doc</Dependency>
            <Dependency>intltool</Dependency>
            <Dependency>libgusb-devel</Dependency>
            <Dependency>libusb-devel</Dependency>
            <Dependency>lcms2-devel</Dependency>
            <Dependency>sqlite-devel</Dependency>
            <Dependency>eudev-devel</Dependency>
            <Dependency>bash-completion</Dependency>
            <Dependency>polkit-devel</Dependency>
            <Dependency>argyllcms</Dependency>
            <Dependency>docbook2x</Dependency>
            <Dependency>vala-devel</Dependency>
            <Dependency>sane-backends-devel</Dependency>
        </BuildDependencies>
        <Patches>
        </Patches>
    </Source>

    <Package>
        <Name>colord</Name>
        <RuntimeDependencies>
            <Dependency>dbus</Dependency>
            <Dependency>eudev</Dependency>
            <Dependency>glib2</Dependency>
            <Dependency>lcms2</Dependency>
            <Dependency>polkit</Dependency>
            <Dependency>sqlite</Dependency>
            <Dependency>libgusb</Dependency>
            <Dependency>shared-color-profiles</Dependency>
            <Dependency>sane-backends</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/dbus-1/system.d</Path>
            <Path fileType="library">/lib/udev/rules.d</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib/*.so.*</Path>
            <Path fileType="library">/usr/lib/colord-plugins</Path>
            <Path fileType="library">/usr/lib/colord-sensors</Path>
            <Path fileType="library">/usr/lib/girepository-1.0</Path>
            <Path fileType="libexec">/usr/lib/colord</Path>
            <Path fileType="data">/usr/share/bash-completion</Path>
            <Path fileType="data">/usr/share/colord</Path>
            <Path fileType="data">/usr/share/dbus-1</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/glib-2.0/schemas</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="data">/usr/share/polkit-1</Path>
            <Path fileType="data">/var/lib/colord/icc</Path>
        </Files>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>colord-devel</Name>
        <Summary>Development files for colord</Summary>
        <RuntimeDependencies>
            <Dependency release="current">colord</Dependency>
            <Dependency>lcms2-devel</Dependency>
            <Dependency>libgusb-devel</Dependency>
            <Dependency>vala-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include/colord-1/colord</Path>
            <Path fileType="header">/usr/include/colord-1/colord-session</Path>
            <Path fileType="header">/usr/include/colord-1/colorhug</Path>
            <Path fileType="header">/usr/include/colord-1/colord.h</Path>
            <Path fileType="header">/usr/include/colord-1/colord-private.h</Path>
            <Path fileType="data">/usr/lib/pkgconfig/colord.pc</Path>
            <Path fileType="data">/usr/lib/pkgconfig/colorhug.pc</Path>
            <Path fileType="library">/usr/lib/*.so</Path>
            <Path fileType="data">/usr/share/vala/vapi/colord.vapi</Path>
            <Path fileType="data">/usr/share/gir-1.0</Path>
        </Files>
    </Package>
 
    <Package>
        <Name>shared-color-profiles</Name>
        <Files>
            <Path fileType="data">/usr/share/color/icc/colord</Path>
        </Files>
    </Package>
   
