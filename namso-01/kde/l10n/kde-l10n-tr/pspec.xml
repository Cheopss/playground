    <Source>
        <Name>kde-l10n-tr</Name>
        <Homepage>http://l10n.kde.org</Homepage>
        <Packager>
            <Name>Yusuf Aydemir</Name>
            <Email>yusuf.aydemir@pisilinux.org</Email>
