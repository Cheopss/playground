    <Package>
        <Name>geda</Name>
        <RuntimeDependencies>
            <Dependency>guile</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>python</Dependency>
	    <Dependency>gawk</Dependency>
            <Dependency>perl-XML-Parser</Dependency>
            <Dependency>flex</Dependency>
