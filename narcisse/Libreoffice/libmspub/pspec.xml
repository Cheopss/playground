        <RuntimeDependencies>
            <Dependency>icu4c</Dependency>
            <Dependency>librevenge</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="library">/usr/lib</Path>
        </Files>
    </Package>

